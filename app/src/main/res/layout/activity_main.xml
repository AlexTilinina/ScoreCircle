<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.bankcalendar.circlesview.CirclesDiagramView
        android:id="@+id/circlesDiagramView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:commentaryText="Предельная кредитная нагрузка 50%"
        app:layout_constraintBottom_toTopOf="@id/test2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxScore="40000"
        app:outerCircleRadius="120dp"
        app:primaryText="228%"
        app:secondaryText="text" />

    <TextView
        android:id="@+id/test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circlesDiagramView" />
</androidx.constraintlayout.widget.ConstraintLayout>